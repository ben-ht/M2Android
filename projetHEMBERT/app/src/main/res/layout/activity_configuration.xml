<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConfigurationActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/settings"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/difficulty_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <RadioButton
            android:id="@+id/radio_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="@string/easy" />

        <RadioButton
            android:id="@+id/radio_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="@string/medium" />

        <RadioButton
            android:id="@+id/radio_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="@string/hard" />

        <RadioButton
            android:id="@+id/radio_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="@string/custom" />
    </RadioGroup>

    <TextView
        android:id="@+id/player_hp_label"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:text="@string/health"
        app:layout_constraintTop_toTopOf="@+id/player_hp"
        app:layout_constraintBottom_toBottomOf="@+id/player_hp"
        app:layout_constraintEnd_toStartOf="@+id/player_hp"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/player_hp"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:hint="Enter HP"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/difficulty_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_hp_label" />

    <TextView
        android:id="@+id/player_power_label"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:text="@string/player_power"
        app:layout_constraintTop_toTopOf="@+id/player_power"
        app:layout_constraintBottom_toBottomOf="@+id/player_power"
        app:layout_constraintEnd_toStartOf="@+id/player_power"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/player_power"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:hint="Enter Power"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/player_hp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_power_label" />

    <TextView
        android:id="@+id/monster_power_label"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:text="@string/max_monster_power"
        app:layout_constraintTop_toTopOf="@+id/monster_power"
        app:layout_constraintBottom_toBottomOf="@+id/monster_power"
        app:layout_constraintEnd_toStartOf="@+id/monster_power"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/monster_power"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:hint="Enter Max Monster Power"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/player_power"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/monster_power_label" />


    <Button
        android:id="@+id/back"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="@+id/startGame"
        app:layout_constraintEnd_toStartOf="@+id/startGame"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/startGame"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="DÃ©marrer la partie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/playerName" />

    <EditText
        android:id="@+id/playerName"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/startGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/monster_power" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:text="@string/player_name"
        app:layout_constraintBottom_toBottomOf="@+id/playerName"
        app:layout_constraintEnd_toStartOf="@+id/playerName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playerName"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
